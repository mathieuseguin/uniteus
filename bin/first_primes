#!/usr/bin/env ruby

require 'slop'
require File.dirname(__FILE__) + '/../lib/uniteus.rb'

opts = Slop.parse do |o|
  o.on '--version', 'print the version' do
    puts Uniteus::VERSION
    exit
  end
end

n = opts.arguments.first

if n.nil?
  puts "please enter how many primer numbers you would like to compute."
  exit
end

primes = Uniteus::Prime.first(n)
puts "The first #{n} prime numbers are: " + primes.join(', ')
